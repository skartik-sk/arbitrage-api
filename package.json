{
  "name": "defi-arbitrage-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "DeFi Arbitrage Trading Bot for detecting and executing profitable trades across multiple DEXs",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development node src/index.js",
    "api": "node src/api/server.js",
    "setup": "npm install && cp .env.example .env && echo 'Setup complete! Please edit .env with your configuration.'",
    "setup:env": "cp .env.example .env",
    "clean": "rm -rf node_modules && rm -f package-lock.json",
    "reinstall": "npm run clean && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docker:build": "docker build -t defi-arbitrage-bot .",
    "docker:run": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "health": "curl -s http://localhost:3000/api/health || echo 'Server not running'",
    "logs": "tail -f logs/combined.log 2>/dev/null || echo 'No logs directory found'",
    "logs:error": "tail -f logs/error.log 2>/dev/null || echo 'No error logs found'",
    "validate": "node validate-setup.js",
    "validate:syntax": "node -c src/index.js && echo 'Syntax validation passed'"
  },
  "keywords": ["defi", "arbitrage", "trading", "bot", "uniswap", "ethereum", "cryptocurrency"],
  "author": "DeFi Arbitrage Team",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.8.1",
    "@uniswap/v3-sdk": "^3.13.1",
    "@uniswap/sdk-core": "^3.2.2",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "bignumber.js": "^9.1.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}